echo "üîç Checking for running dev servers..." && \
if lsof -i :5173 -i :5174 2>/dev/null | grep -q LISTEN; then \
  echo "‚ö†Ô∏è  Dev server already running. Check http://localhost:5173 or http://localhost:5174"; \
else \
  echo "‚úÖ Starting dev server..." && npm run dev; \
fi
```